<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Flyout_nav.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Flyout_nav"
    Shell.FlyoutBehavior="Flyout">
    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
    <ShellContent
        Title="Harvest Moon: More Friends of Mineral Town"
        ContentTemplate="{DataTemplate local:Harvestmoon}"
        FlyoutIcon="hm.jpg" />
        <ShellContent
        Title="Legend of Zelda: Minish Cap"
        ContentTemplate="{DataTemplate local:legendofzelda}"
        FlyoutIcon="loz.jpg" />
        <ShellContent
        Title="Pokemon Emerald"
        ContentTemplate="{DataTemplate local:pokemon}"
        FlyoutIcon="pokemon.jpg" />
    </FlyoutItem>
</Shell>
